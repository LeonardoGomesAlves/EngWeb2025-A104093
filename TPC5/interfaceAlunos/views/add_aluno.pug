extends layout

block content
  .w3-card-4
    header.w3-container.w3-blue
      h1= tit
      h2 Adicionar aluno
    form.w3-container(method="POST")
      fieldset
        legend Dados Aluno 
        label ID
        input.w3-input.w3-round(type="text" name="_id" required)
        label Nome
        input.w3-input.w3-round(type="text" name="nome" required)
        label Git Link
        input.w3-input.w3-round(type="text" name="gitlink" required)
      fieldset
        legend TPC's

        each num in [1,2,3,4,5,6]
            input.w3-check(type="checkbox" name="tpc" + num value="1")
            label   TPC #{num}    

      br
      button.w3-button.w3-blue(type="submit") Adicionar


    footer.w3-container.w3-blue
        adress Generated by EW2025 class