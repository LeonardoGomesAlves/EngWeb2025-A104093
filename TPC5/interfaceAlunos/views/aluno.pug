extends layout

block content
  .w3-card-4
    header.w3-container.w3-blue
      h1= tit
    form.w3-container(method="POST")
      fieldset
        legend Dados Aluno 
        label ID
        input.w3-input.w3-round(type="text" name="id" readonly value= aluno._id)
        label Nome
        input.w3-input.w3-round(type="text" name="nome" value= aluno.nome)
        label Git Link
        input.w3-input.w3-round(type="text" name="gitlink" value= aluno.gitlink)
      fieldset
        legend TPC's

        each num in [1,2,3,4,5,6]
         if aluno["tpc"+num] && aluno["tpc"+num] == true
            input.w3-check(type="checkbox" name="tpc" + num value="1" checked) 
         else 
            input.w3-check(type="checkbox" name="tpc" + num value="1") 
         label   TPC #{num}    

      br
      button.w3-button.w3-blue(type="submit") Editar
      a.w3-button.w3-red(href=`/alunos/delete/${aluno._id}`) Remover


    footer.w3-container.w3-blue
        adress Generated by EW2025 class