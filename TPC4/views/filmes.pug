extends layout

block content
  .w3-card-4
    header.w3-container.w3-blue
      h1= tit
    .w3-container
      table.w3-table-all
        tr
          th Ano
          th Título
          th Elenco
          th Géneros
        each f in lfilmes
          tr
            td= f.year
            td= f.title
            td
              ul.w3-ul
                if f.cast && f.cast.length > 0
                  each a in f.cast
                    li
                      a(href=`/actor/${a}`)= a
                else
                  li Nenhum ator disponível
            td
              ul.w3-ul
                if f.genres && f.genres.length > 0
                  each g in f.genres
                    li= g
                else
                  li Nenhum gênero disponível
            td
              .w3-bar-block
                a.button.w3-button.w3-blue.w3-block(href=`/filmes/edit/${f.id}`) Editar
                a.button.w3-button.w3-red.w3-block(href=`/filmes/delete/${f.id}`) Apagar




    footer.w3-container.w3-blue
      adress Generated by EW2025 class